<div class="container-fluid">
  <div id="particles-js"></div>
  <div id="particles-js2"></div>
    <div class="row">
        <div class="column col-12 col-md-10 col-lg-8 col-xl-6">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'jumbotron bg-dark'}) do |f| %>
            <h2 class="text-light">Log In</h2>
            <div class="field form-group">
              <%= f.label :email, class:'text-light' %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", id: 'login-email', class: "form-control" %>
            </div>
            <div class="field form-group">
              <%= f.label :password, class:'text-light' %><br />
              <%= f.password_field :password, autocomplete: "current-password", id: 'login-password', class: "form-control" %>
            </div>
            <% if devise_mapping.rememberable? -%>
              <div class="field form-group">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, class:'text-light' %>
              </div>
            <% end -%>
            <div class="actions">
              <%= f.submit "Log in", class:"btn btn-primary btn-sign-up",id:"real-log-in-button"  %>
              <a href="#"  id="log-in-trigger" class="btn btn-primary btn-sign-up">Log in</a>
              <%= link_to "Didn't get confirmation instructions?", new_confirmation_path(resource_name), class: 'btn btn-primary btn-sign-up' %><br />
              <%- if devise_mapping.omniauthable? %>
                <%- resource_class.omniauth_providers.each do |provider| %>
                  <%= link_to "Sign in with <span class='badge badge-light'><i class='fab fa-#{OmniAuth::Utils.camelize(provider) == 'GoogleOauth2' ? 'google' : 'facebook-f'}'></span></i>".html_safe, omniauth_authorize_path(resource_name, provider), class: 'btn btn-primary btn-sign-up' %>
                <% end -%>
              <% end -%>
              <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'btn btn-primary btn-sign-up' %><br />
            </div>
          <% end %>
    </div>
  </div>
</div>